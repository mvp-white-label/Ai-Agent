{
  "name": "electron-react-nextjs-auth",
  "version": "1.0.0",
  "description": "Electron + React + Next.js app with Microsoft 365 authentication",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start",
    "electron": "electron . --disable-gpu --disable-software-rasterizer",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3001 && electron . --disable-gpu --disable-software-rasterizer\" --kill-others-on-fail",
    "build-electron": "npm run build && electron-builder",
    "lint": "next lint"
  },
  "dependencies": {
    "@azure/msal": "^1.4.5",
    "@azure/msal-browser": "^4.24.0",
    "@azure/msal-node": "^2.5.1",
    "@supabase/supabase-js": "^2.38.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/formidable": "^3.4.5",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "formidable": "^3.5.4",
    "jose": "^5.1.3",
    "next": "^14.0.0",
    "next-auth": "^4.24.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.electron-react-nextjs-auth",
    "productName": "Electron React NextJS Auth",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
